{
  "name": "hive",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time collaborative editing for Obsidian vaults",
  "workspaces": [
    "server",
    "plugin",
    "admin"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:plugin": "npm run dev --workspace=plugin",
    "dev:admin": "npm run dev --workspace=admin",
    "build:server": "npm run build --workspace=server",
    "build:plugin": "npm run build --workspace=plugin",
    "build:admin": "npm run build --workspace=admin",
    "build:all": "npm run build:server && npm run build:plugin && npm run build:admin",
    "clean": "rm -rf server/dist plugin/main.js admin/dist admin/dist-electron",
    "version:server": "npm version --workspace=server",
    "version:plugin": "npm run version --workspace=plugin",
    "version:admin": "npm version --workspace=admin"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hive.git"
  },
  "keywords": [
    "obsidian",
    "collaboration",
    "real-time",
    "sync",
    "crdt",
    "yjs"
  ],
  "author": "Hive Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}

